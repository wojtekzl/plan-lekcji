<Window x:Class="planlekcji.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plan Lekcji" Height="790" Width="970" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        
        <Grid Name="Grids" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="1.1*" MinHeight="50"/>
                <RowDefinition Height="1.1*" MinHeight="50"/>
                <RowDefinition Height="1.1*" MinHeight="50"/>
                <RowDefinition Height="1.1*" MinHeight="50"/>
                <RowDefinition Height="1.1*" MinHeight="50"/>
                <RowDefinition Height="1.1*" MinHeight="50"/>
                <RowDefinition Height="1.1*" MinHeight="50"/>
                <RowDefinition Height="1.1*" MinHeight="50"/>
                <RowDefinition Height="1.1*" MinHeight="50"/>
                <RowDefinition Height="1.1*" MinHeight="50"/>
                <RowDefinition Height="1.1*" MinHeight="50"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="1" Margin="1">
                <TextBlock Text="Poniedziałek" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Grid.Row="0" Grid.Column="3" BorderBrush="Black" BorderThickness="1" Margin="1">
